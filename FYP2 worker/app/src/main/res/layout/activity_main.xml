<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:src="@drawable/login_image"
        android:layout_alignParentTop="true">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@drawable/curve"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/firsthead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in account"
            android:textSize="40dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/ttn_norms_bold"
            >

        </TextView>



        <TextView
            android:layout_below="@+id/firsthead"
            android:id="@+id/usernameheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/ttn_norms_bold"
            android:text="Enter username"
            android:layout_marginLeft="19dp"
            android:textColor="#000"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RelativeLayout
            android:id="@+id/firstlayout"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/background_border"
            android:layout_below="@+id/usernameheading"
            >


            <EditText
                android:id="@+id/usernametext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="19dp"
                android:ems="10"
                android:hint="username"
                android:inputType="text"
                android:textSize="16dp"
                android:background="@android:color/transparent"/>



        </RelativeLayout>




        <TextView
            android:id="@+id/passwordheading"
            android:layout_below="@+id/firstlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/ttn_norms_bold"
            android:text="Enter Password"
            android:layout_marginLeft="19dp"
            android:textColor="#000"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RelativeLayout
            android:id="@+id/secondlayout"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/background_border"
            android:layout_below="@+id/passwordheading"
            >


            <EditText
                android:id="@+id/otp_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="19dp"
                android:ems="10"
                android:hint="********"
                android:inputType="textPassword"
                android:textSize="16dp"
                android:background="@android:color/transparent"/>



        </RelativeLayout>

        <TextView
            android:id="@+id/forgot"
            android:layout_below="@id/secondlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:text="forgot password"
            android:textColor="#000"
            android:textSize="19dp">


        </TextView>

        <TextView
            android:layout_below="@id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:text="Create New Account"
            android:textColor="#000"
            android:textSize="30dp"
            android:clickable="true"
            android:onClick="clickoncreateaccount"
            >


        </TextView>

        <RelativeLayout
            android:id="@+id/createnewaccount"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="29dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            >
            <TextView
                android:id="@+id/signin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign In"
                android:background="#000"
                android:textColor="#fff"
                android:textSize="35dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="19dp"
                android:gravity="center"
                >

            </TextView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>