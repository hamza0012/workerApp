<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Documents_Screen"
    android:background="#CDF1F0F0">


    <ImageView

        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:src="@drawable/login_image"
        android:layout_alignParentTop="true">
    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="#fff"
        >
    <RelativeLayout
        android:id="@+id/flayout1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:background="@drawable/background_border"
        android:layout_below="@+id/passwordheading"
        >


        <TextView
            android:id="@+id/uploadphoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="number"
            android:textSize="19dp"
            android:textColor="#000"
            android:text="Upload your Photo "
            android:gravity="center"
            android:background="#fff"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/flayout2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:background="@drawable/background_border"
        android:layout_below="@+id/flayout1"
        >


        <TextView
            android:id="@+id/uploadCNIC2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="number"
            android:textSize="19dp"
            android:textColor="#000"
            android:text="Upload your CNIC"
            android:gravity="center"
            android:background="#fff"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/flayout3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:background="@drawable/background_border"
        android:layout_below="@+id/flayout2"
        >


        <TextView
            android:id="@+id/uploadBirthCertificate2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="number"
            android:textSize="19dp"
            android:textColor="#000"
            android:text="Add CNIC Back"
            android:gravity="center"
            android:background="#fff"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/flayout4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:background="@drawable/background_border"
        android:layout_below="@+id/flayout3"
        >


        <TextView
            android:id="@+id/uploadCNIC4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="number"
            android:textSize="19dp"
            android:textColor="#000"
            android:text="Upload your Birth Certificate"
            android:gravity="center"
            android:background="#fff"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            >
            <TextView
                android:id="@+id/uploadtodatabse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Upload"
                android:textColor="#fff"
                android:textSize="20dp"
                android:background="#000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:onClick="uploadworkerDocuments"
                >

            </TextView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>